{
  "$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
  "sourceRoot": "apps/fuse/src",
  "projectType": "application",
  "targets":
  {
    "build":
    {
      "builder": "@angular-devkit/build-angular:browser",
      "options":
      {
            "outputPath": "dist/fuse",
            "index": "apps/fuse/src/index.html",
            "main": "apps/fuse/src/main.ts",
            "polyfills": "apps/fuse/src/polyfills.ts",
            "tsConfig": "apps/fuse/src/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "allowedCommonJsDependencies": [
                "apexcharts",
                "highlight.js",
                "crypto-js/enc-utf8",
                "crypto-js/hmac-sha256",
                "crypto-js/enc-base64"
            ],
            "assets": [
                "apps/fuse/src/favicon-16x16.png",
                "apps/fuse/src/favicon-32x32.png",
                "apps/fuse/src/assets",
                {
                    "glob": "_redirects",
                    "input": "src",
                    "output": "/"
                }
            ],
            "stylePreprocessorOptions": {
                "includePaths": [
                    "src/@fuse/styles"
                ]
            },
            "styles": [
                "apps/fuse/src/@fuse/styles/tailwind.scss",
                "apps/fuse/src/@fuse/styles/themes.scss",
                "apps/fuse/src/styles/vendors.scss",
                "apps/fuse/src/@fuse/styles/main.scss",
                "apps/fuse/src/styles/styles.scss",
                "apps/fuse/src/styles/tailwind.scss"
            ],
            "scripts": []
      },
      "configurations":
      {
          "production": {
              "budgets": [
                  {
                      "type": "initial",
                      "maximumWarning": "3mb",
                      "maximumError": "5mb"
                  },
                  {
                      "type": "anyComponentStyle",
                      "maximumWarning": "75kb",
                      "maximumError": "90kb"
                  }
              ],
              "fileReplacements": [
                  {
                      "replace": "src/environments/environment.ts",
                      "with": "src/environments/environment.prod.ts"
                  }
              ],
              "outputHashing": "all"
          },
          "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
          }
      },
      "defaultConfiguration": "production"
    },
    "serve":
    {
      "builder": "@angular-devkit/build-angular:dev-server",
      "configurations":
      {
        "production":
        {
          "browserTarget": "fuse:build:production"
        },
        "development":
        {
          "browserTarget": "fuse:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint":
    {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["coverage/apps/fuse"],
      "options":
      {
        "lintFilePatterns":
         [
          "apps/fuse/**/*.ts",
          "apps/fuse/**/*.html"
        ]
      }
    },
    "test":
    {
      "builder": "@angular-devkit/build-angular:karma",
      "options": {
          "main": "apps/fuse/src/test.ts",
          "polyfills": "apps/fuse/src/polyfills.ts",
          "tsConfig": "tsconfig.spec.json",
          "karmaConfig": "karma.conf.js",
          "inlineStyleLanguage": "scss",
          "assets": [
              "apps/fuse/src/favicon-16x16.png",
              "apps/fuse/src/favicon-32x32.png",
              "src/assets"
          ],
          "styles": [
              "apps/fuse/src/styles/styles.scss"
          ],
          "scripts": []
      }
    },
    "extract-i18n":
    {
      "builder": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "fuse:build"
      }
    },
    "schematics":
    {
      "@schematics/angular:component":
      {
        "style": "scss"
      }
    }
  },
  "root": "",
  "prefix": "fuse"
}
